{{>header}}
<div class="alert alert-danger" role="alert">
  {{mensajeError}}
</div>

<form action="/inscribir" method="POST" >
    <div class="form-row">
        <div class="col">
            <label for="exampleInputEmail1">Documento de identidad</label>
            <input class="form-control" type="number" name="documento" required>
        </div>
        <div class="col">
            <label for="exampleInputEmail1">Correo electrónico</label>
            <input class="form-control" type="email" name="email" required>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label for="exampleInputEmail1">Nombre</label>
            <input class="form-control" type="text" name="nombre" required></input>
        </div>    
        <div class="col">
            <label for="exampleInputEmail1">Teléfono</label>
            <input class="form-control" type="number" name="telefono" required>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label for="exampleInputEmail1">Cursos disponibles</label>
            <select class="form-control" name="idCurso" id="idCurso">
                {{{cursosDisponiblesSelect}}}
            </select>
        </div>
    </div>
    <div class="form-group mb-2">
        <button>Guardar</button>
    </div>  
</form>
{{>footer}}